{
  "name": "phatty",
  "version": "0.0.4",
  "description": "Unity-style Entites and Components for Phaser JS",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bugs": {
    "url": "https://github.com/grischaerbe/phatty/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/grischaerbe/phatty.git"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "bun test",
    "release": "bun run build && changeset publish",
    "changeset:add": "bunx @changesets/cli"
  },
  "keywords": [
    "phaser",
    "game-engine",
    "typescript",
    "game-object",
    "component"
  ],
  "author": "Grischa Erbe <grischa.erbe@googlemail.com>",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@types/bun": "^1.2.8",
    "@types/node": "^22.13.14",
    "eslint": "^9.23.0",
    "eventemitter3": "^5.0.1",
    "prettier": "^3.5.3",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.28.0",
    "@changesets/cli": "^2.28.1"
  },
  "peerDependencies": {
    "phaser": "^3.60.0"
  }
}
